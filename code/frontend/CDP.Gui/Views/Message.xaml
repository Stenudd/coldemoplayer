<Page x:Class="CDP.Gui.Views.Message"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cc="clr-namespace:CDP.Gui.CustomControls"
    xmlns:l="clr-namespace:CDP.Gui"
    Title="Message">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox Margin="8" Style="{StaticResource MessageTextBox}" Text="{Binding Text, Mode=OneWay}" />
        </Grid>
        <cc:Footer Grid.Row="1">
            <cc:OkButton HorizontalAlignment="Center" Margin="0,8,0,8" Command="{Binding OkCommand}" />
        </cc:Footer>
    </Grid>
</Page>
