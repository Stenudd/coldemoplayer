<Page x:Class="CDP.Gui.Views.Play"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cc="clr-namespace:CDP.Gui.CustomControls"
    xmlns:l="clr-namespace:CDP.Gui"
    Title="Play">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                <Image Source="/Images/play.png" Width="32" Height="32" />
                <TextBlock Margin="0,0,0,4" VerticalAlignment="Center" Text="{Binding Caption}" FontSize="18" />
            </StackPanel>
            <ProgressBar Grid.Row="1" Height="24" MinWidth="300" Minimum="0" Maximum="100" Value="{Binding Progress}" />
        </Grid>
        <cc:Footer Grid.Row="1">
            <cc:CancelButton HorizontalAlignment="Center" Margin="0,8,0,8" Command="{Binding CancelCommand}" />
        </cc:Footer>
    </Grid>
</Page>
