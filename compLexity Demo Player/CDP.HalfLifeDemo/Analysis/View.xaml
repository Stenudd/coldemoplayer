<UserControl x:Class="CDP.HalfLifeDemo.Analysis.View"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:core="clr-namespace:CDP.Core;assembly=CDP.Core"
    xmlns:local="clr-namespace:CDP.HalfLifeDemo.Analysis">
    <UserControl.Resources>
        <local:TimestampConverter x:Key="timestampConverter" />
    </UserControl.Resources>
    <TabControl>
        <TabItem Header="Game Log">
            <core:RichTextBox Document="{Binding GameLogDocument}" />
        </TabItem>
        <TabItem Header="Scoreboard">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.5*" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.4*" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                
                <!-- Rounds -->
                <ListView Grid.Column="0" Grid.RowSpan="2" Margin="4" ItemsSource="{Binding Rounds}" IsSynchronizedWithCurrentItem="True">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Round" DisplayMemberBinding="{Binding Number}" />
                            <GridViewColumn Header="Start Time" DisplayMemberBinding="{Binding Timestamp, Converter={StaticResource timestampConverter}}" />
                        </GridView>
                    </ListView.View>
                </ListView>
                
                <!-- Teams -->
                <ListView Grid.Column="1" Grid.Row="0" Margin="4" ItemsSource="{Binding Path=Rounds/Teams}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Team" DisplayMemberBinding="{Binding Name}" />
                            <GridViewColumn Header="Score" DisplayMemberBinding="{Binding Score}" />
                        </GridView>
                    </ListView.View>
                </ListView>
                
                <!-- Players -->
                <ListView Grid.Column="1" Grid.Row="1" Margin="4" ItemsSource="{Binding Path=Rounds/Players}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Team" DisplayMemberBinding="{Binding TeamName}" />
                            <GridViewColumn Header="Player Name" DisplayMemberBinding="{Binding Name}" />
                            <GridViewColumn Header="Frags" DisplayMemberBinding="{Binding Frags}" />
                            <GridViewColumn Header="Deaths" DisplayMemberBinding="{Binding Deaths}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </TabItem>
        <TabItem Header="Players">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="0.75*" />
                    <ColumnDefinition Width="0.75*" />
                </Grid.ColumnDefinitions>
                
                <!-- Players -->
                <ListView Grid.Column="0" Margin="4" ItemsSource="{Binding Players}" IsSynchronizedWithCurrentItem="True">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" />
                            <GridViewColumn Header="Slot" DisplayMemberBinding="{Binding Slot}" />
                            <GridViewColumn Header="Id" DisplayMemberBinding="{Binding EntityId}" />
                        </GridView>
                    </ListView.View>
                </ListView>
                
                <!-- InfoKeys -->
                <ListView Grid.Column="1" Margin="4" ItemsSource="{Binding Path=Players/InfoKeys}" IsSynchronizedWithCurrentItem="True">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Key" DisplayMemberBinding="{Binding Key}" />
                            <GridViewColumn Header="Value" DisplayMemberBinding="{Binding NewestValueInnerValue}" />
                        </GridView>
                    </ListView.View>
                </ListView>
                
                <!-- InfoKey values -->
                <ListView Grid.Column="2" Margin="4" ItemsSource="{Binding Path=Players/InfoKeys/Values}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Value" DisplayMemberBinding="{Binding InnerValue}" />
                            <GridViewColumn Header="Timestamp" DisplayMemberBinding="{Binding Timestamp, Converter={StaticResource timestampConverter}}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </TabItem>
    </TabControl>
</UserControl>
