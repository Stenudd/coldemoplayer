<UserControl x:Class="CDP.HalfLifeDemo.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <GroupBox Header="Playback Method">
            <StackPanel>
                <RadioButton IsChecked="{Binding Path=Playdemo, Mode=TwoWay}">playdemo</RadioButton>
                <RadioButton IsChecked="{Binding Path=Viewdemo, Mode=TwoWay}">viewdemo</RadioButton>
            </StackPanel>
        </GroupBox>
        <CheckBox IsChecked="{Binding StartListenServer}">Start Listen Server</CheckBox>
        <CheckBox IsChecked="{Binding RemoveShowscores}">Remove showscores command</CheckBox>
    </StackPanel>
</UserControl>
