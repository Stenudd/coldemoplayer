<UserControl x:Class="CDP.Quake3Arena.Analysis.View"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:core="clr-namespace:CDP.Core;assembly=CDP.Core">
    <TabControl>
        <TabItem>
            <TabItem.Header>
                <StackPanel Orientation="Horizontal" Margin="0,2,0,2">
                    <Image Source="/CDP.Gui;component/Images/gamelog.png" Margin="0,0,4,0" />
                    <TextBlock>Game log</TextBlock>
                </StackPanel>
            </TabItem.Header>
            <core:FlowDocumentViewer Background="Black" FontFamily="Courier New" FontSize="14" Document="{Binding GameLogDocument}" />
        </TabItem>
        <TabItem>
            <TabItem.Header>
                <StackPanel Orientation="Horizontal" Margin="0,2,0,2">
                    <Image Source="/CDP.Gui;component/Images/gamelog.png" Margin="0,0,4,0" />
                    <TextBlock>Console log</TextBlock>
                </StackPanel>
            </TabItem.Header>
            <core:FlowDocumentViewer Background="Black" FontFamily="Courier New" FontSize="14" Document="{Binding ConsoleLogDocument}" />
        </TabItem>
    </TabControl>
</UserControl>
