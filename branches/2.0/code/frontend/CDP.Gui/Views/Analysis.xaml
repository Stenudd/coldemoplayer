<Page x:Class="CDP.Gui.Views.Analysis"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cc="clr-namespace:CDP.Gui.CustomControls"
    xmlns:l="clr-namespace:CDP.Gui"
    Title="Analysis">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="8,8,8,0" HorizontalAlignment="Center">
            <Image Source="/Images/analyse.png" Width="32" Height="32" />
            <TextBlock Text="{Binding Header}" FontSize="18" VerticalAlignment="Center" />
        </StackPanel>
        <ContentControl Grid.Row="1" Margin="8" Content="{Binding View}" />
        <cc:Footer Grid.Row="2">
            <cc:BackButton HorizontalAlignment="Center" Margin="0,8,0,8" Command="{Binding BackCommand}" />
        </cc:Footer>
    </Grid>
</Page>
