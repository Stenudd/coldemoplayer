<Page x:Class="CDP.Gui.View.Message"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:view="clr-namespace:CDP.Gui.View"
    xmlns:uc="clr-namespace:CDP.Gui.UserControls"
    xmlns:local="clr-namespace:CDP.Gui"
    Title="Message">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox Margin="8" Style="{StaticResource MessageTextBox}" Text="{Binding Text, Mode=OneWay}" />
        </Grid>
        <uc:Footer Grid.Row="1">
            <local:IconButton HorizontalAlignment="Center" Margin="0,8,0,8" Command="{Binding OkCommand}" IconSource="/Images/ok.png" Text="{x:Static local:Strings.OkButtonText}" />
        </uc:Footer>
    </Grid>
</Page>
