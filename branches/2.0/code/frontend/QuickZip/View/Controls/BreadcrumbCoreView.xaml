<UserControl x:Class="QuickZip.View.BreadcrumbCoreView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"             
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    
    xmlns:t="clr-namespace:QuickZip.Tools"
    Height="25" MinWidth="300" HorizontalAlignment="Left" x:Name="rootControl">

    <UserControl.Resources>
        <ResourceDictionary Source="../../Resources/BreadcrumbResources.xaml" />
    </UserControl.Resources>
    <DockPanel>
        <ContentControl x:Name="expander"  />
        <ItemsControl x:Name="itemList" VerticalContentAlignment="Stretch" HorizontalAlignment="Left" >
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <t:BreacrumbCorePanel IsItemsHost="True" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemContainerStyle>
                <Style TargetType="Control">
                    <Setter Property="IsHitTestVisible" Value="{Binding HitTestVisible, Mode=OneWayToSource}" />                    
                </Style>
            </ItemsControl.ItemContainerStyle>
        </ItemsControl>

    </DockPanel>
</UserControl>
