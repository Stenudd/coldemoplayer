<UserControl x:Class="CDP.View.Error"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" MaxWidth="500" MaxHeight="500" TextWrapping="Wrap" Style="{StaticResource ReadOnlyNoStyleTextBox}" Text="{Binding Text}" />
        <Button Grid.Row="1" Command="{Binding OkCommand}">OK</Button>        
    </Grid>
</UserControl>
