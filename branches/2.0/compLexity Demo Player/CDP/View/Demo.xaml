<UserControl x:Class="CDP.View.Demo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ListView Grid.Row="0" ItemsSource="{Binding Data.Details}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Value" DisplayMemberBinding="{Binding Value}" />
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel Grid.Row="1" Margin="0,20" Orientation="Horizontal">
            <Button Command="{Binding PlayCommand}">Play</Button>
            <Button Command="{Binding AnalyseCommand}">Analyse</Button>
        </StackPanel>
    </Grid>
</UserControl>
