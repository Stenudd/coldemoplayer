<Window x:Class="compLexity_Demo_Player.UpdateCheckWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Update Check" 
    WindowStartupLocation="CenterOwner" ShowInTaskbar="False" WindowStyle="ToolWindow" 
    SizeToContent="WidthAndHeight"
    Closed="Window_Closed">
    <Grid Margin="8">
        <StackPanel>
            <TextBlock Margin="4" VerticalAlignment="Center" Name="uiStatusTextBlock" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                <Button Name="uiCancelButton" Margin="4" Padding="16,0,16,0" Click="uiCancelButton_Click">Cancel</Button>
                <Button Name="uiCloseButton" Margin="4" Padding="16,0,16,0" Click="uiCloseButton_Click">Close</Button>
                <Button Name="uiYesButton" Margin="4" Padding="16,0,16,0" Click="uiYesButton_Click">Yes</Button>
                <Button Name="uiNoButton" Margin="4" Padding="16,0,16,0" Click="uiNoButton_Click">No</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
