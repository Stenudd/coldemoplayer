<Window x:Class="Update.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Activated="Window_Activated" Closing="Window_Closing" Closed="Window_Closed"
    Title="compLexity Demo Player - Updater" Width="350" Height="300" WindowStartupLocation="CenterScreen">
    <Grid Margin="8">
        <DockPanel>
            <Button DockPanel.Dock="Bottom" Name="uiCancelOrOkButton" Padding="16,0,16,0" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="uiCancelOrOkButton_Click">Cancel</Button>
            <TextBox Name="uiLogTextBox" IsReadOnly="True" Margin="0,0,0,8" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></TextBox>
        </DockPanel>
    </Grid>
</Window>
