<Window x:Class="compLexity_Demo_Player.ProgressWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Activated="Window_Activated" Closing="Window_Closing"
    Title="ProgressWindow" ShowInTaskbar="False" ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStyle="ToolWindow" WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="8">
            <ProgressBar Name="uiProgressBar" Width="400"/>
            <Button Name="uiCancelButton" Margin="8,0,0,0" Padding="16,0,16,0" Background="#08FF0000" Click="uiCancelButton_Click">
                <StackPanel Orientation="Horizontal">
                    <Image VerticalAlignment="Center" Width="16" Height="16" Source="data\cancel.png" Margin="0,0,4,0" />
                    <TextBlock VerticalAlignment="Center">Cancel</TextBlock>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>
